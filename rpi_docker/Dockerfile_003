# Base image for ARMv7 (32-bit)
FROM arm32v7/debian:bullseye-slim

# Install necessary software
RUN apt-get update && apt-get install -y \
    openssh-server \
    sudo \
    nano \
    curl \
    net-tools \
    apt-utils \
    --no-install-recommends && \
    rm -rf /var/lib/apt/lists/*

# Fix for sudo 'nosuid' issue
RUN chmod u+s /usr/bin/sudo

# Create standard 'pi' user
RUN useradd -m -s /bin/bash pi && \
    adduser pi sudo

# Set passwords and unlock root account
RUN echo 'root:raspberry' | chpasswd && \
    usermod --unlock root
RUN echo 'pi:raspberry' | chpasswd

# Configure SSH
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config

# --- FINAL FIX: Create the missing directory for sshd ---
RUN mkdir -p /run/sshd

EXPOSE 22

# Command to run when the container starts
CMD ["/usr/sbin/sshd", "-D"]
